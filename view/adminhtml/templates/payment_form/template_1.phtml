<?php endif; ?>

    <div class="card-form-container">
        <div class="form-header">
            <h4 class="title">
                <?= $block->escapeHtml(__($this->config->params[$methodId][$templateName . '_form_title'])); ?>
            </h4>
        </div>
        <div class="form-body">
