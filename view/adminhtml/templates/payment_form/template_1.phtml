            <div class="control">
                <input type="text"
                    name="card_data[owner]"
                    class="card-owner"
                    placeholder="<?= $block->escapeHtml(__('Card owner name')); ?>"
                    title="<?= $block->escapeHtml(__('Card owner name')) ?>"
                    data-validate="{'required-entry':true}"
                    >
            </div>

